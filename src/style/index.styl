leftWidth = 500px;
rightWidth = 400px;

.index-box {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgb(69, 163, 250);

  .index-inner-box {
    width: leftWidth + rightWidth;
    display: flex;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);

    .left-box {
      position: relative;
      width: leftWidth;

      .image-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .text-box {
        position: absolute;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, 0.7);
        width: 100%;
        height: 100%;
        color: #fff;
        display: flex;
        align-items: center;
        flex-direction: column;

        .main-describe {
          font-size: 42px;
          margin-bottom: 0;

          &:first-child {
            margin-top: 100px;
          }
        }

        .sub-describe {
          padding: 40px 0 50px 0;
        }
      }
    }

    .right-box {
      background: #fff;
      width: rightWidth;
      padding: 60px 80px;

      .logo {
        color: #40a9ff;

        span {
          color: #666;
        }
      }

      .form {
        margin-top: 20px;
      }

      .performance {
        margin-top: 20px;
        list-style: none;
        padding-left: 0;

        li {
          padding: 5px 0;

          .icon {
            font-size: 20px;
          }

          span {
            padding-left: 5px;
          }
        }
      }
    }
  }
}