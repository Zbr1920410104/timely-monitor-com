.home-monitor-text-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;

  .title-box {
    font-size: 16px;
    padding-top: 10px;
    padding-bottom: 10px;
    text-align: center;
    background: #b5f5ec;
    border-bottom: 1px solid #ddd;
    color: rgb(24, 144, 255);
    width: 100%;
  }

  .description-box {
    width: 100%;

    .description-item-box {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      color: rgb(24, 144, 255);

      .item-text-box {
        width: 25%;
      }
    }
  }

  .button-box {
    padding-top: 20px;
  }
}