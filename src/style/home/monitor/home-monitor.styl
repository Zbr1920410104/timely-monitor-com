.home-monitor-box {
  // display: flex;
  // flex-direction: row;
  width: 100%;

  .title-box {
    font-size: 16px;
    padding-top: 10px;
    padding-bottom: 10px;
    text-align: center;
    background: #b5f5ec;
    border-bottom: 1px solid #ddd;
    color: rgb(24, 144, 255);
  }

  .time-switch-box {
    display: flex;

    .switch-text-box {
      padding-right: 5px;
    }
  }

  .time-select-box {
    padding: 20px 0;
  }

  .time-select-box {
    display: flex;
    flex-direction: row;

    .select-text-box {
      padding-top: 5px;
    }

    .confirm-button {
      margin-left: 20px;
    }

    .fail-button {
      margin-left: 20px;
    }
  }

  .carousel-box {
    width: 100%;
    height: 100%;
  }
}