.home-monitor-list-box {
  width: 100%;

  .button-box {
    display: flex;
    padding-bottom: 20px;
    width: 56%;

    .select {
      min-width: 100px;
      margin-right: 20px;
    }

    .button {
      background: #52c41a;
      border: 1px solid #52c41a;
      margin: 'auto';
    }
  }

  .title-box {
    font-size: 16px;
    padding-top: 10px;
    padding-bottom: 10px;
    text-align: center;
    background: rgb(51, 68, 84);
    border-bottom: 1px solid #ddd;
    color: #fff;
  }
}