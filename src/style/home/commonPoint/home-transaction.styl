.home-transaction-box {
  .title-box {
    font-size: 16px;
    padding-top: 10px;
    padding-bottom: 10px;
    text-align: center;
    background: rgb(51, 68, 84);
    border-bottom: 1px solid #ddd;
    color: #fff;
  }

  .transaction-content-box {
    display: flex;
    flex-direction: row;

    .transaction-left-box {
      width: 50%;

      .home-index-img {
        width: 100%;
      }
    }

    .transaction-right-box {
      width: 50%;
      padding: 30px;
      display: inline-block;
      vertical-align: center;
    }
  }
}