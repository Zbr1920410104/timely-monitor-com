.home-sider {
  overflow: auto;
  height: 100vh;
  position: fixed;
  left: 0;

  .logo {
    height: 42px;
    background: rgba(255, 255, 255, 0.2);
    margin: 16px 0;
    color: #fff;
    line-height: calc((40 / 20));
    font-size: 18px;
    color: rgb(24, 144, 255);
    text-align: center;

    span {
      margin-left: 10px;
    }
  }

  .user-info {
    margin-left: 16px;
    color: #fff;
  }
}

.home-content {
  margin-left: 200px;

  .home-header {
    background-color: #ffccc7;
    display: flex;
    justify-content: space-between;
    color: rgb(24, 144, 255);
    font-size: 18px;

    .exit-box {
      text-align: right;

      .exit-button {
        font-size: 18px;
      }
    }
  }

  .content-box {
    margin: 24px 16px 0;
    overflow: initial;

    .content-inner-box {
      padding: 24px;
      background: #fff;
    }
  }

  .home-footer {
    text-align: center;
  }
}